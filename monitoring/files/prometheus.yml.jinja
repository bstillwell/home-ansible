global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["prom01:9090", "prom02:9090"]

  - job_name: "ceph"
    file_sd_configs:
      - files:
        - ceph_targets.yml

  - job_name: "node"
    file_sd_configs:
      - files:
        - node_targets.yml
